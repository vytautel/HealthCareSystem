<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Control.SymptomCard">

    <Frame CornerRadius="8"
           Margin="20,15,20,15">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="SymptomTapEvent" />
        </Frame.GestureRecognizers>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       x:Name="SymptomNr"
                       FontSize="24"
                       VerticalOptions="Center" />
                <ImageButton Grid.Column="1"
                             Source="Trash.png"
                             Clicked="OnRemoveClicked"
                             HeightRequest="40"
                             HorizontalOptions="End" />
            </Grid>

            <SearchBar x:Name="symptomsSearch"
                       Placeholder="Įveskite simptomą..."
                       CancelButtonColor="DarkGray"
                       PlaceholderColor="DarkGray"
                       TextColor="DarkGray"
                       TextTransform="Lowercase"
                       HorizontalTextAlignment="Center"
                       FontSize="Medium"
                       FontAttributes="Italic"
                       TextChanged="OnSymptomSearchInput" />
            <ListView x:Name="SymptomSearchResults"
                      HeightRequest="100"
                      ItemsSource="{Binding Symptoms}"
                      SelectionMode="Single"
                      ItemSelected="SymptomSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="5">
                                <Label Padding="5"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold" />
                                <Label IsVisible="false"
                                       Text="{Binding Id}"
                                       FontAttributes="Italic" />
                                <Label Padding="5"
                                       Text="{Binding Description}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="Stiprumas" />
            <StackLayout>
                <Image x:Name="IntensityImg"
                       HeightRequest="40" />
                <Slider x:Name="IntensityLevelSlider"
                        ThumbColor="red"
                        HeightRequest="30"
                        Maximum="10"
                        Minimum="1"
                        Value="{Binding IntensityLevel}" />

                <!--<Label x:Name="IntensityLevel"
                       Text="{Binding Source={x:Reference slider},
                              Path=Value,
                              StringFormat='The Slider value is {0:F0}'}"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand" /> -->
            </StackLayout>
        </StackLayout>
    </Frame>
</ContentView>