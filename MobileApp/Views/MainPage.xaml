<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MobileApp.MainPage"
            xmlns:local="clr-namespace:MobileApp"
            Title="Menu">
    <FlyoutPage.Flyout>
        <local:FlyoutMenuPage x:Name="flyout" />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:HomePage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>